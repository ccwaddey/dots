WindowTitle {DateTime}
WindowSize  1155 16
Font "xft:Sans:size=16" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%H:%M"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%H:%M"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 446 -2
 Size 50 16
 Font "xft:Sans:size=16"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

