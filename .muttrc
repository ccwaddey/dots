set quit=ask-yes
set sort=threads
set sort_aux=date-received

set mbox_type=Maildir
set mbox=~/.Maildir/.Inbox
set folder=~/.Maildir
set spoolfile=~/.Maildir/.Inbox
set record=~/.Maildir/.Sent
set pager_stop=yes
set edit_headers

color indicator		color2 default
color status 		color0 color4
color hdrdefault  	color2 default

unignore *
unhdr_order *
hdr_order Date: From: To: Cc: Subject:

set mask=".*"

# pager keybindings
bind pager j next-line
bind pager k previous-line
bind pager <Backspace> previous-page
bind pager < top
bind pager > bottom

# macro M just designed to get the mailboxes
macro index \ch c?c^u=<enter>y
macro index M	\chc?

# default sort
# folder-hook . "set sort=threads"

mailboxes -label turtle ~/.Maildir/.Inbox
folder-hook ~/.Maildir \
	'set folder=~/.Maildir/ ; \
	set from="me <me@turtle.local>" ; \
	set record=+.Sent ; \
	set spoolfile=+.Inbox ; \
	set mbox=+.Inbox ; \
	set postponed=+.Drafts
	set smtp_url="" ; \
	push \ch'

source ~/.priv/.muttrc
